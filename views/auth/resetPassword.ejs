<%- include('../partials/header') %>
<%- include('../partials/navBar') %>
<%- include('../partials/flashMsg') %>
<div class="container">
    <div class="row">
        <div class="col-12 col-sm-9 col-md-6 mx-auto">
            <% if (valid) { %>
            <!-- Reset Password Form -->
            <div class="card my-3">
                <div class="card-header">
                    <h5>Change Password?</h5>
                </div>
                <form action="/reset-password" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="card-body">
                        <input type="hidden" name="_id" value="<%= _id %>">
                        <input type="hidden" name="token" value="<%= token %>">

                        <div class="form-group">
                            <input name="newPassword" type="password" class="form-control" placeholder="New Password">
                        </div>
                        <div class="form-group">
                            <input name="confirmNewPassword" type="password" class="form-control" placeholder="Confirm New Password">
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary btn-block">Confirm</button>
                    </div>
                </form>
            </div>
            <% } else { %>
            <h1>Token invalid or expired</h1>
            <p>Please click here to resend the reset password email.</p>
            <% } %>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>