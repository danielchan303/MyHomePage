<% if (info.length) { %>
    <div class="alert alert-primary border-0 rounded-0 m-0" role="alert">
        <%- info %>
    </div>
<% } %>
<% if (error.length) { %>
    <div class="alert alert-danger border-0 rounded-0 m-0" role="alert">
        <%- error %>
    </div>
<% } %>
<% if (success.length) { %>
    <div class="alert alert-success border-0 rounded-0 m-0" role="alert">
        <%- success %>
    </div>
<% } %>